<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Resources/Images/System/Icons/globe_icon.png" type="image/png">
    <title>@ViewBag.Page.Title</title>
    @Styles.Render("~/bundles/SystemStyles")
    @RenderSection("Styles", required: false)
    @Styles.Render(@ViewBag.Page.ControllerStyleMinHref)
    @Styles.Render(@ViewBag.Page.ViewStyleMinHref)
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="Left">
                <div class="Block ImageTitle">
                    <div class="Image">
                        <img alt="new world" title="NEW WORLD" src="~/Resources/Images/System/Icons/globe_white.svg" />
                    </div>
                    <div class="Title">New World</div>
                </div>
            </div>
            <div class="Right">
                <div class="Block MenuTop">
                    <a class="Item" href="#Home">Главная</a>
                    <a class="Item" href="#Main">Основное</a>
                    <a class="Item" href="#Intristing">Интересное</a>
                    <a class="Item" href="#About">О нас</a>
                </div>
                <div class="Block Account">
                    <div class="Image">
                        <img alt="user" title="user" class="user" src="~/Resources/Images/System/Icons/user_white.svg" />
                    </div>
                    <div class="Info">

                    </div>
                </div>
            </div>
        </div>
    </header>
    <section>@RenderBody()</section>
    <footer class="footer">
        <div class="Group">
            <div class="Title">Home</div>
            <div class="Pages">
                <a class="Item" href="#Home">Home</a>
                <a class="Item" href="#Main">Main</a>
                <a class="Item" href="#Intristing">Intristing</a>
                <a class="Item" href="#About">About</a>
            </div>
        </div>
        <div class="Group">
            <div class="Title">Blocks</div>
            <div class="Pages">
                <a class="Item" href="/Map">Map</a>
                <a class="Item" href="/Quest">Quest</a>
                <a class="Item" href="/News">News</a>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/SystemScripts")
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
    @Scripts.Render(@ViewBag.Page.ControllerScriptHref)
    @Scripts.Render(@ViewBag.Page.ViewScriptHref)
</body>
</html>