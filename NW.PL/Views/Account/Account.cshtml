@{
    Layout = ViewBag.Page.LayoutHref;
    Identity Identity = new Identity();
    ViewBag.Identity = Identity;
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@if(Identity.isAuthentication) { <script>top.location.href = "/";</script> }

<div class="filterFon">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Вход</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Регистрация</label>
            <div class="login-form">
                <iframe src="/Account/Entry" class="sign-in-htm" ></iframe>
                <form class="sign-up-htm" method="post" action="/Account/Registration">
                    @model NW.BL.DTO.UserRegistration

                    <div class="group">
                        <label for="rLogin" class="label">Логин</label>
                        <div class="validation-message">@Html.ValidationMessageFor(r => r.Login)</div>
                        @Html.TextBoxFor(r => r.Login, new { @class = "input", id = "rLogin" })
                    </div>
                    <div class="group">
                        <label for="rpass" class="label">Пароль</label>
                        <div class="validation-message">@Html.ValidationMessageFor(r => r.Password)</div>
                        <input id="rpass" type="password" class="input" data-type="password" name="Password">
                    </div>
                    <div class="group">
                        <label for="rePass" class="label">Повторите пароль</label>
                        <div class="validation-message">@Html.ValidationMessageFor(r => r.RePassword)</div>
                        <input id="rePass" type="password" class="input" data-type="password" name="RePassword">
                    </div>
                    <div class="group">
                        <label for="email" class="label">Электронная почта</label>
                        <input id="email" type="text" class="input" name="Email">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Зарегистрироваться" id="signUp">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <label for="tab-1">Уже зарегистрированы?</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
